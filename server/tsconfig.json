{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "typeRoots": ["./src/types", "./node_modules/@types"],

    // File Layout
    "rootDir": "./src",
    "outDir": "./build",

    // Environment Settings
    "module": "commonjs",
    "target": "es2016",

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Recommended Options
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
